@page "/admin/accounting"
@using Microsoft.EntityFrameworkCore
@using webshop.Data
@using webshop.Models
@using System.Text
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@inject IDbContextFactory<AppDbContext> DbFactory
@inject IJSRuntime JS
@inject NavigationManager Nav
@rendermode InteractiveServer

<PageTitle>Üzleti Intelligencia és Könyvelés | Admin</PageTitle>

@* Chart.js betöltése *@
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold m-0 text-dark">Üzleti Analitika</h2>
        <button class="btn btn-outline-dark rounded-pill px-4 shadow-sm" @onclick='() => Nav.NavigateTo("/admin")'>
            <i class="bi bi-house-door me-2"></i>Dashboard
        </button>
    </div>

    @* SZŰRŐ PANELS *@
    <div class="card border-0 shadow-sm rounded-4 p-4 mb-4 bg-light animate__animated animate__fadeIn">
        <div class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label small fw-bold text-muted text-uppercase">Időszak kezdete</label>
                <input type="date" class="form-control border-0 shadow-sm rounded-3" @bind="startDate" />
            </div>
            <div class="col-md-4">
                <label class="form-label small fw-bold text-muted text-uppercase">Időszak vége</label>
                <input type="date" class="form-control border-0 shadow-sm rounded-3" @bind="endDate" />
            </div>
            <div class="col-md-4">
                <button class="btn btn-primary w-100 rounded-pill fw-bold shadow py-2" @onclick="GenerateReport">
                    <i class="bi bi-arrow-repeat me-2"></i>Riport Generálása
                </button>
            </div>
        </div>
    </div>

    @if (report != null)
    {
        @* 1. SZINT: STRATÉGIAI KPI-OK *@
        <div class="row g-4 mb-4 animate__animated animate__fadeInUp">
            <div class="col-md-3">
                <div class="p-4 bg-white rounded-4 shadow-sm border-start border-primary border-5 h-100 transition-hover">
                    <div class="small text-muted text-uppercase fw-bold mb-1">Összes Bevétel</div>
                    <div class="h3 fw-bold m-0">@report.TotalGrossRevenue.ToString("N0") Ft</div>
                    <small class="text-primary fw-bold">@report.OrderCount db rendelés</small>
                </div>
            </div>
            <div class="col-md-3">
                <div class="p-4 bg-white rounded-4 shadow-sm border-start border-success border-5 h-100 transition-hover">
                    <div class="small text-muted text-uppercase fw-bold mb-1">Tiszta Áruérték</div>
                    <div class="h3 fw-bold m-0">@report.TotalProductValue.ToString("N0") Ft</div>
                    <small class="text-success fw-bold">Kedvezmények nélkül</small>
                </div>
            </div>
            <div class="col-md-3">
                <div class="p-4 bg-white rounded-4 shadow-sm border-start border-danger border-5 h-100 transition-hover">
                    <div class="small text-muted text-uppercase fw-bold mb-1">Kiadott Kedvezmény</div>
                    <div class="h3 fw-bold text-danger m-0">-@report.TotalDiscounts.ToString("N0") Ft</div>
                    <small class="text-muted small">@report.DiscountRate.ToString("N1")% engedmény</small>
                </div>
            </div>
            <div class="col-md-3">
                <div class="p-4 bg-white rounded-4 shadow-sm border-start border-warning border-5 h-100 transition-hover">
                    <div class="small text-muted text-uppercase fw-bold mb-1">Átlagos Kosárérték</div>
                    <div class="h3 fw-bold m-0">@report.AverageOrderValue.ToString("N0") Ft</div>
                    <small class="text-muted small">Vevőnkénti költés</small>
                </div>
            </div>
        </div>

        @* 2. SZINT: PÉNZÜGYI EGYENLEG *@
        <div class="row g-4 mb-4 animate__animated animate__fadeInUp" style="animation-delay: 0.1s;">
            <div class="col-md-6">
                <div class="p-4 bg-dark text-white rounded-4 shadow-sm border-start border-info border-5 h-100">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div class="small text-uppercase fw-bold opacity-75">Összes Kiadás (Stock Up + Szállítás)</div>
                        <i class="bi bi-wallet2 fs-4 opacity-50"></i>
                    </div>
                    <div class="h2 fw-bold m-0 text-info">@((report.TotalPurchaseCost + report.TotalShippingFees).ToString("N0")) Ft</div>
                    <div class="mt-2 small opacity-75">
                        Beszerzés: @report.TotalPurchaseCost.ToString("N0") Ft |
                        Szállítási önköltség: @report.TotalShippingFees.ToString("N0") Ft
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="p-4 bg-white rounded-4 shadow-sm border-start border-primary border-5 h-100">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div class="small text-muted text-uppercase fw-bold">Nettó Üzleti Egyenleg</div>
                        <span class="badge bg-primary rounded-pill px-3">ROI: @report.ROI.ToString("N1")%</span>
                    </div>
                    <div class="h2 fw-bold m-0 text-primary">@report.GrossProfit.ToString("N0") Ft</div>
                    <div class="mt-2 small text-muted">
                        Kalkuláció: (Nettó Bevétel) - (Minden Beszerzési Költség)
                    </div>
                </div>
            </div>
        </div>

        @* 3. SZINT: VIZUÁLIS ANALITIKA *@
        <div class="row g-4 mb-4 animate__animated animate__fadeInUp" style="animation-delay: 0.2s;">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm rounded-4 p-4 h-100">
                    <h6 class="fw-bold mb-4 text-uppercase small text-muted tracking-wider">
                        <i class="bi bi-graph-up me-2 text-primary"></i>Cash-Flow Dinamika (Napi)
                    </h6>
                    <div style="height: 350px;">
                        <canvas id="accountingChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm rounded-4 p-4 h-100">
                    <h6 class="fw-bold mb-4 text-uppercase small text-muted tracking-wider">
                        <i class="bi bi-pie-chart me-2 text-primary"></i>Bevétel Forrása
                    </h6>
                    <div style="height: 350px;">
                        <canvas id="paymentMethodChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        @* 4. SZINT: TERMÉK-PROFITABILITÁS *@
        <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden animate__animated animate__fadeInUp" style="animation-delay: 0.3s;">
            <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                <h6 class="fw-bold m-0 text-uppercase small text-muted"><i class="bi bi-gem text-warning me-2"></i>Termék Életciklus és Nyereség</h6>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light small text-muted text-uppercase">
                        <tr>
                            <th class="ps-4">Termék</th>
                            <th class="text-center">Eladás</th>
                            <th class="text-end">Bruttó Bevétel</th>
                            <th class="text-end text-primary">Önköltség (Átl.)</th>
                            <th class="text-end pe-4">Árrés Tömeg</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in report.TopProducts)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@p.Name</td>
                                <td class="text-center">
                                    <span class="badge bg-light text-dark border">@p.Quantity db</span>
                                </td>
                                <td class="text-end">@p.Revenue.ToString("N0") Ft</td>
                                <td class="text-end text-primary small">@p.AvgPurchaseCost.ToString("N0") Ft/db</td>
                                <td class="text-end pe-4">
                                    <span class="fw-bold @(p.RealizedProfit >= 0 ? "text-success" : "text-danger")">
                                        @p.RealizedProfit.ToString("N0") Ft
                                    </span>
                                    <div class="progress mt-1 ms-auto" style="height: 4px; width: 60px;">
                                        <div class="progress-bar bg-success" style="width: @(p.Revenue > 0 ? (p.RealizedProfit / (p.Revenue / 1.27m) * 100) : 0)%"></div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @* 5. SZINT: LOGISZTIKA ÉS ÜGYFÉL STATISZTIKÁK *@
        <div class="row g-4 mb-4 animate__animated animate__fadeInUp" style="animation-delay: 0.4s;">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm rounded-4 p-4 h-100">
                    <h6 class="fw-bold mb-4 text-uppercase small text-muted">Szállítási Mix</h6>
                    <div style="height: 220px;">
                        <canvas id="shippingMethodChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm rounded-4 p-4 h-100">
                    <h6 class="fw-bold mb-4 text-uppercase small text-muted">Vásárlói Bázis</h6>
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <div class="d-flex align-items-center">
                            <div class="bg-primary-soft p-2 rounded-3 me-3"><i class="bi bi-person-check text-primary"></i></div>
                            <span>Regisztrált</span>
                        </div>
                        <span class="fw-bold h5 m-0">@report.RegisteredCustomerOrders</span>
                    </div>
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <div class="d-flex align-items-center">
                            <div class="bg-secondary-soft p-2 rounded-3 me-3"><i class="bi bi-person-dash text-muted"></i></div>
                            <span>Vendég</span>
                        </div>
                        <span class="fw-bold h5 m-0 text-muted">@report.GuestOrders</span>
                    </div>
                    <div class="mt-auto border-top pt-3">
                        <div class="d-flex justify-content-between small">
                            <span class="text-muted">Konverziós hűség:</span>
                            <span class="fw-bold text-primary">@((report.OrderCount > 0 ? (double)report.RegisteredCustomerOrders / report.OrderCount * 100 : 0).ToString("N1"))%</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm rounded-4 p-4 h-100 bg-gradient-dark text-white">
                    <h6 class="fw-bold mb-4 text-uppercase small opacity-75">Rendszer Állapot</h6>
                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-end mb-1">
                            <small class="opacity-75">Lemondási ráta:</small>
                            <span class="fw-bold text-warning">@report.CancellationRate.ToString("N1")%</span>
                        </div>
                        <div class="progress bg-white-20" style="height: 6px;">
                            <div class="progress-bar bg-warning" style="width: @report.CancellationRate%"></div>
                        </div>
                    </div>
                    <div class="mb-0">
                        <div class="d-flex justify-content-between align-items-end mb-1">
                            <small class="opacity-75">ÁFA Kötelezettség:</small>
                        </div>
                        <div class="h4 fw-bold">@report.TotalVAT.ToString("N0") Ft</div>
                        <small class="text-info"><i class="bi bi-info-circle me-1"></i>27% kulccsal számolva</small>
                    </div>
                </div>
            </div>
        </div>

        @* 6. SZINT: RÉSZLETES LISTÁK ÉS EXPORT *@
        <div class="card border-0 shadow-sm rounded-4 p-4 mb-4 bg-white animate__animated animate__fadeIn">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="fw-bold m-0 text-dark">Adatok Exportálása</h5>
                <button class="btn btn-dark btn-lg rounded-pill px-5 fw-bold shadow-lg transition-hover" @onclick="ExportToCsv">
                    <i class="bi bi-file-earmark-excel me-2"></i>TELJES CSV GENERÁLÁSA
                </button>
            </div>
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="p-3 border rounded-3 bg-light-soft">
                        <h6 class="fw-bold small mb-2 text-primary">A CSV tartalma:</h6>
                        <ul class="small text-muted mb-0">
                            <li>Összesített pénzügyi mérleg (Bevétel, ÁFA, ROI)</li>
                            <li>Részletes rendelési lista (Minden tranzakció)</li>
                            <li>Készletbeszerzési napló (Stock Up események)</li>
                            <li>Termékenkénti árrés kimutatás</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="p-3 border rounded-3 bg-light-soft h-100">
                        <h6 class="fw-bold small mb-2 text-success">Instrukció:</h6>
                        <p class="small text-muted mb-0">Az exportált fájlt az Excelben "Semicolon" (pontosvessző) elválasztóval és UTF-8 kódolással nyissa meg a tökéletes formázáshoz.</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

