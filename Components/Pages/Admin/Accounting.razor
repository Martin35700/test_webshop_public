@code {
    private DateTime startDate = new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1);
    private DateTime endDate = DateTime.Now;
    private AccountingReport? report;

    private async Task GenerateReport()
    {
        using var context = DbFactory.CreateDbContext();

        // 1. ADATGYŰJTÉS
        var orders = await context.Orders
            .Include(o => o.Items)
            .Where(o => o.OrderDate >= startDate && o.OrderDate <= endDate.AddDays(1) && o.Status != OrderStatus.Lemondva)
            .ToListAsync();

        var stockEntries = await context.StockEntries
            .Include(se => se.Product)
            .Where(se => se.Date >= startDate && se.Date <= endDate.AddDays(1))
            .ToListAsync();

        var cancelledCount = await context.Orders
            .CountAsync(o => o.OrderDate >= startDate && o.OrderDate <= endDate.AddDays(1) && o.Status == OrderStatus.Lemondva);

        // 2. ÖNKÖLTSÉG SZÁMÍTÁSOK
        var avgProductCosts = await context.StockEntries
            .GroupBy(se => se.ProductId)
            .Select(g => new { ProductId = g.Key, AvgCost = g.Average(x => x.UnitCost) })
            .ToDictionaryAsync(x => x.ProductId, x => x.AvgCost);

        decimal totalGross = orders.Sum(o => o.TotalAmount);
        decimal totalNet = totalGross / 1.27m;
        decimal totalVat = totalGross - totalNet;
        decimal totalPurchaseCost = stockEntries.Sum(se => se.Quantity * se.UnitCost);

        // Diagram adatok (Napi bontás)
        var dailyLabels = new List<string>();
        var revenueData = new List<decimal>();
        var expenseData = new List<decimal>();

        for (var date = startDate.Date; date <= endDate.Date; date = date.AddDays(1))
        {
            dailyLabels.Add(date.ToString("MM.dd"));
            revenueData.Add(orders.Where(o => o.OrderDate.Date == date).Sum(o => o.TotalAmount));
            expenseData.Add(stockEntries.Where(se => se.Date.Date == date).Sum(se => se.Quantity * se.UnitCost));
        }

        var shippingMethods = orders.GroupBy(o => o.ShippingMethod ?? "Futárszolgálat")
                                   .Select(g => new { Method = g.Key, Count = g.Count() })
                                   .ToList();

        report = new AccountingReport
        {
            OrderCount = orders.Count,
            TotalGrossRevenue = totalGross,
            TotalShippingFees = orders.Sum(o => o.ShippingFee),
            TotalDiscounts = orders.Sum(o => o.DiscountAmount),
            TotalProductValue = orders.Sum(o => o.Items.Sum(i => i.Price * i.Quantity)),
            TotalItemsSold = orders.SelectMany(o => o.Items).Sum(i => i.Quantity),

            TotalPurchaseCost = totalPurchaseCost,
            GrossProfit = totalNet - totalPurchaseCost,
            ROI = totalPurchaseCost > 0 ? (double)((totalNet - totalPurchaseCost) / totalPurchaseCost * 100) : 0,
            DiscountRate = totalGross > 0 ? (double)(orders.Sum(o => o.DiscountAmount) / totalGross * 100) : 0,

            TotalNetRevenue = totalNet,
            TotalVAT = totalVat,
            AverageOrderValue = orders.Count > 0 ? orders.Average(o => o.TotalAmount) : 0,

            RevenueByCard = orders.Where(o => o.PaymentMethod == "Bankkártya").Sum(o => o.TotalAmount),
            RevenueByTransfer = orders.Where(o => o.PaymentMethod == "Utalás").Sum(o => o.TotalAmount),
            RevenueByCash = orders.Where(o => o.PaymentMethod == "Utánvét").Sum(o => o.TotalAmount),

            RegisteredCustomerOrders = orders.Count(o => !string.IsNullOrEmpty(o.UserId)),
            GuestOrders = orders.Count(o => string.IsNullOrEmpty(o.UserId)),
            CancellationRate = (orders.Count + cancelledCount) > 0 ? (double)cancelledCount / (orders.Count + cancelledCount) * 100 : 0,

            PeriodStockEntries = stockEntries.OrderByDescending(se => se.Date).ToList(),

            TopProducts = orders.SelectMany(o => o.Items)
                .GroupBy(i => new { i.ProductId, i.ProductName })
                .Select(g =>
                {
                    decimal rev = g.Sum(i => i.Price * i.Quantity);
                    decimal cost = g.Key.ProductId.HasValue && avgProductCosts.TryGetValue(g.Key.ProductId.Value, out var c) ? c : 0;
                    return new ProductStat
                    {
                        Name = g.Key.ProductName,
                        Quantity = g.Sum(i => i.Quantity),
                        Revenue = rev,
                        AvgPurchaseCost = cost,
                        RealizedProfit = (rev / 1.27m) - (cost * g.Sum(i => i.Quantity))
                    };
                }).OrderByDescending(p => p.RealizedProfit).ToList(),

            DailyStats = dailyLabels.Select((label, index) => new DailyStat
            {
                DateLabel = label,
                Revenue = revenueData[index],
                Count = orders.Count(o => o.OrderDate.ToString("MM.dd") == label)
            }).ToList()
        };

        // JS DIAGRAMOK HÍVÁSA
        await Task.Delay(200);
        await JS.InvokeVoidAsync("renderAdvancedCharts",
            dailyLabels, revenueData, expenseData,
            new decimal[] { report.RevenueByCard, report.RevenueByTransfer, report.RevenueByCash },
            shippingMethods.Select(x => x.Method).ToArray(),
            shippingMethods.Select(x => x.Count).ToArray());
    }

    private async Task ExportToCsv()
    {
        if (report == null) await GenerateReport();
        using var context = DbFactory.CreateDbContext();

        var ordersForExport = await context.Orders
            .Include(o => o.Items)
            .Where(o => o.OrderDate >= startDate && o.OrderDate <= endDate.AddDays(1) && o.Status != OrderStatus.Lemondva)
            .OrderBy(o => o.OrderDate)
            .ToListAsync();

        var csv = new StringBuilder();

        // 1. BLOKK: PÉNZÜGYI ÖSSZESÍTŐ
        csv.AppendLine("RIZIKA ANALITIKA ÉS MÉRLEG");
        csv.AppendLine($"Idoszak:;{startDate:yyyy.MM.dd} - {endDate:yyyy.MM.dd}");
        csv.AppendLine($"Brutto Bevetel:;{report!.TotalGrossRevenue} Ft");
        csv.AppendLine($"Netto Bevetel:;{report.TotalNetRevenue} Ft");
        csv.AppendLine($"AFA (27%):;{report.TotalVAT} Ft");
        csv.AppendLine($"Osszes Beszerzes:;{report.TotalPurchaseCost} Ft");
        csv.AppendLine($"Cash-Flow Egyenleg:;{report.GrossProfit} Ft");
        csv.AppendLine($"ROI:;{report.ROI:N2}%");
        csv.AppendLine(";;");

        // 2. BLOKK: RENDELÉSEK RÉSZLETESEN
        csv.AppendLine("RENDELESEK LISTAJA");
        csv.AppendLine("ID;Datum;Vevo;Email;Varos;Fizetes;Szallitas;Aruertek;Kedvezmeny;Vegosszeg");
        foreach (var o in ordersForExport)
        {
            decimal sub = o.TotalAmount + o.DiscountAmount - o.ShippingFee;
            csv.AppendLine($"{o.Id};{o.OrderDate:yyyy.MM.dd};\"{o.CustomerName}\";{o.Email};{o.City};{o.PaymentMethod};{o.ShippingMethod};{sub};{o.DiscountAmount};{o.TotalAmount}");
        }
        csv.AppendLine(";;");

        // 3. BLOKK: BESZERZÉSEK (STOCK UP)
        csv.AppendLine("BESZERZESI NAPLO (STOCK UP)");
        csv.AppendLine("Datum;Termek;Mennyiseg;Egysegar;Osszesen");
        foreach (var se in report.PeriodStockEntries)
        {
            csv.AppendLine($"{se.Date:yyyy.MM.dd HH:mm};\"{se.Product?.Name}\";{se.Quantity};{se.UnitCost};{se.Quantity * se.UnitCost}");
        }

        var preamble = Encoding.UTF8.GetPreamble();
        var contentBytes = Encoding.UTF8.GetBytes(csv.ToString());
        var finalBytes = new byte[preamble.Length + contentBytes.Length];
        Buffer.BlockCopy(preamble, 0, finalBytes, 0, preamble.Length);
        Buffer.BlockCopy(contentBytes, 0, finalBytes, preamble.Length, contentBytes.Length);

        await JS.InvokeVoidAsync("downloadFile", $"webshop_uzleti_riport_{startDate:yyyyMMdd}.csv", "text/csv;charset=utf-8", Convert.ToBase64String(finalBytes));
    }

    public class AccountingReport
    {
        public decimal TotalGrossRevenue { get; set; }
        public decimal TotalProductValue { get; set; }
        public decimal TotalDiscounts { get; set; }
        public decimal TotalShippingFees { get; set; }
        public int OrderCount { get; set; }
        public int TotalItemsSold { get; set; }
        public decimal AverageOrderValue { get; set; }
        public decimal TotalVAT { get; set; }
        public decimal TotalNetRevenue { get; set; }
        public decimal TotalPurchaseCost { get; set; }
        public decimal GrossProfit { get; set; }
        public double ROI { get; set; }
        public double DiscountRate { get; set; }
        public int RegisteredCustomerOrders { get; set; }
        public int GuestOrders { get; set; }
        public double CancellationRate { get; set; }
        public decimal RevenueByCard { get; set; }
        public decimal RevenueByTransfer { get; set; }
        public decimal RevenueByCash { get; set; }
        public List<ProductStat> TopProducts { get; set; } = new();
        public List<DailyStat> DailyStats { get; set; } = new();
        public List<StockEntry> PeriodStockEntries { get; set; } = new();
    }

    public class ProductStat
    {
        public string Name { get; set; } = "";
        public int Quantity { get; set; }
        public decimal Revenue { get; set; }
        public decimal AvgPurchaseCost { get; set; }
        public decimal RealizedProfit { get; set; }
    }

    public class DailyStat
    {
        public string DateLabel { get; set; } = "";
        public int Count { get; set; }
        public decimal Revenue { get; set; }
    }
}