@rendermode InteractiveServer
@using webshop.Services
@using Microsoft.AspNetCore.Components.Authorization
@inject CartService CartService
@implements IDisposable

<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm sticky-top py-2">
    <div class="container">
        @* LOGÓ *@
        <a class="navbar-brand fw-bold fs-4 d-flex align-items-center" href="" @onclick="CloseAll">
            <i class="bi bi-shop text-primary me-2"></i>
            <span style="letter-spacing: -1px;">Modern Webshop</span>
        </a>

        @* JOBB OLDALI GYORSGOMBOK (Mobilon: Csak a kosár ikon) *@
        <div class="d-flex align-items-center gap-2 d-lg-none ms-auto me-2">
            <NavLink class="btn btn-link text-white position-relative p-2" href="cart" @onclick="CloseAll">
                <i class="bi bi-cart3 fs-4"></i>
                @if (CartService.Items.Any())
                {
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.6rem;">
                        @CartService.Items.Sum(i => i.Quantity)
                    </span>
                }
            </NavLink>
        </div>

        @* HAMBURGER GOMB *@
        <button class="navbar-toggler border-0 shadow-none" type="button" @onclick="ToggleNavMenu">
            <i class="bi @(collapseNavMenu ? "bi-list" : "bi-x-lg") fs-2"></i>
        </button>

        @* MENÜ TARTALMA *@
        <div class="collapse navbar-collapse @(collapseNavMenu ? "" : "show")" id="topNavbar">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                <li class="nav-item">
                    <NavLink class="nav-link px-3 py-2" href="" Match="NavLinkMatch.All" @onclick="CloseAll">
                        Kezdőlap
                    </NavLink>
                </li>

                <li class="nav-item">
                    <NavLink class="nav-link px-3 py-2" href="shop" @onclick="CloseAll">
                        Termékek
                    </NavLink>
                </li>

                <li class="nav-item">
                    <NavLink class="nav-link px-3 py-2" href="track-order" @onclick="CloseAll">
                        <i class="bi bi-truck me-1 d-lg-none"></i>Rendeléskövetés
                    </NavLink>
                </li>

                <li class="nav-item">
                    <NavLink class="nav-link px-3 py-2" href="contact" @onclick="CloseAll">Kapcsolat</NavLink>
                </li>

                @* ADMINISZTRÁCIÓS MENÜ *@
                <AuthorizeView Roles="Admin">
                    <Authorized>
                        <li class="nav-item dropdown">
                            <div class="nav-link dropdown-toggle px-3 py-2 @(adminOpen ? "show" : "")"
                                 @onclick="ToggleAdmin" style="cursor: pointer;">
                                <i class="bi bi-gear-fill me-1"></i> Adminisztráció
                            </div>
                            <ul class="dropdown-menu border-0 shadow-lg rounded-3 @(adminOpen ? "show" : "")">
                                <li>
                                    <NavLink class="dropdown-item py-2 fw-bold text-primary" href="admin" @onclick="CloseAll">
                                        <i class="bi bi-speedometer2 me-2"></i>Vezérlőpult
                                    </NavLink>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <NavLink class="dropdown-item py-2" href="admin/orders" @onclick="CloseAll">
                                        <i class="bi bi-receipt me-2"></i>Rendelések
                                    </NavLink>
                                </li>
                                <li>
                                    <NavLink class="dropdown-item py-2" href="admin/products" @onclick="CloseAll">
                                        <i class="bi bi-box-seam me-2"></i>Termékek
                                    </NavLink>
                                </li>
                                <li>
                                    <NavLink class="dropdown-item py-2" href="admin/categories" @onclick="CloseAll">
                                        <i class="bi bi-tags me-2"></i>Kategóriák
                                    </NavLink>
                                </li>
                                <li>
                                    <NavLink class="dropdown-item py-2" href="admin/coupons" @onclick="CloseAll">
                                        <i class="bi bi-ticket-perforated me-2"></i>Kuponok
                                    </NavLink>
                                </li>
                                <li>
                                    <NavLink class="dropdown-item py-2" href="admin/reviews" @onclick="CloseAll">
                                        <i class="bi bi-chat-left-quote me-2"></i>Vélemények
                                    </NavLink>
                                    </li>
                                <li>
                                    <NavLink class="dropdown-item py-2" href="admin/users" @onclick="CloseAll">
                                        <i class="bi bi-people-fill me-2"></i>Felhasználók
                                    </NavLink>
                                </li>
                                <li>
                                    <NavLink class="dropdown-item py-2" href="admin/newsletter" @onclick="CloseAll">
                                        <i class="bi bi-envelope-paper me-2"</i>Hírlevél
                                    </NavLink>
                                </li>
                                <li>
                                    <NavLink class="dropdown-item py-2" href="admin/accounting" @onclick="CloseAll">
                                        <i class="bi bi-calculator me-2"></i>Könyvelési riportok
                                    </NavLink>
                                </li>
                            </ul>
                        </li>
                    </Authorized>
                </AuthorizeView>
            </ul>

            <hr class="d-lg-none text-white-50" />

            <div class="d-flex flex-column flex-lg-row align-items-lg-center gap-3">
                @* ASZTALI KOSÁR (Mobilon rejtve, mert ott felül van) *@
                <NavLink class="btn btn-outline-light rounded-pill position-relative px-4 d-none d-lg-block" href="cart">
                    <i class="bi bi-cart3 me-2"></i>Kosár
                    @if (CartService.Items.Any())
                    {
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            @CartService.Items.Sum(i => i.Quantity)
                        </span>
                    }
                </NavLink>

                <AuthorizeView>
                    <Authorized>
                        @* JAVÍTOTT FELHASZNÁLÓI MENÜ: Mobilon és Asztalon is látható *@
                        <div class="dropdown">
                            <button class="btn btn-link text-white text-decoration-none dropdown-toggle px-3 py-2 d-flex align-items-center gap-2 @(userOpen ? "show" : "")"
                                    @onclick="ToggleUser">
                                <i class="bi bi-person-circle fs-5 text-primary"></i>
                                <span class="fw-semibold">@context.User.Identity?.Name</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg rounded-4 mt-lg-2 @(userOpen ? "show" : "")">
                                <li><NavLink class="dropdown-item py-2" href="Account/Profile" @onclick="CloseAll"><i class="bi bi-person me-2"></i>Profilom</NavLink></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form action="Account/Logout" method="post" class="px-2">
                                        <AntiforgeryToken />
                                        <input type="hidden" name="ReturnUrl" value="./" />
                                        <button type="submit" class="dropdown-item py-2 text-danger rounded-3 border-0 bg-transparent w-100 text-start">
                                            <i class="bi bi-box-arrow-right me-2"></i>Kijelentkezés
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </Authorized>
                    <NotAuthorized>
                        <div class="px-3 px-lg-0 d-flex flex-column flex-lg-row gap-2 pb-3 pb-lg-0">
                            <NavLink class="btn btn-outline-primary rounded-pill px-4 w-100" href="Account/Register" @onclick="CloseAll">
                                Regisztráció
                            </NavLink>
                            <NavLink class="btn btn-primary rounded-pill px-4 w-100" href="Account/Login" @onclick="CloseAll">
                                Belépés
                            </NavLink>
                        </div>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>
    </div>
</nav>

@if (adminOpen || userOpen || !collapseNavMenu)
{
    <div class="menu-overlay d-lg-none" @onclick="CloseAll"></div>
}

<style>
    .dropdown-menu.show {
        display: block;
        margin-top: 0;
    }

    .dropdown-item i {
        width: 20px;
        display: inline-block;
    }

    @@media (max-width: 991.98px) {
        .dropdown-menu {
            background-color: rgba(255,255,255,0.05);
            border: 1px solid rgba(255,255,255,0.1) !important;
            color: white;
            position: static !important; /* Mobilon ne lebegjen az elem felett */
            float: none;
            width: 100%;
            margin-top: 0.5rem;
        }

        .dropdown-item {
            color: rgba(255,255,255,0.8);
            padding-left: 1.5rem;
        }

            .dropdown-item:hover {
                background-color: rgba(255,255,255,0.1);
                color: white;
            }

        .navbar-collapse {
            max-height: 80vh;
            overflow-y: auto;
        }
    }

    .menu-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: rgba(0,0,0,0.5);
        z-index: 1030;
    }

    .nav-item.dropdown div.nav-link.active,
    .nav-item.dropdown div.nav-link.show {
        background-color: transparent !important;
        color: #fff !important; /* Vagy az általad kívánt fehér szín */
    }

    /* Ha a NavLink-en belül is van kékülés, azt is megfogjuk */
    .nav-link.active {
        background-color: transparent !important;
    }

    /* Csak a dropdown-item (a lenyíló elemek) kapjanak kiemelést, ha aktívak */
    .dropdown-item.active {
        background-color: var(--bs-primary) !important;
        color: white !important;
    }
</style>

@code {
    private bool collapseNavMenu = true;
    private bool adminOpen = false;
    private bool userOpen = false;

    private void ToggleNavMenu() => collapseNavMenu = !collapseNavMenu;
    private void ToggleAdmin() { adminOpen = !adminOpen; userOpen = false; }
    private void ToggleUser() { userOpen = !userOpen; adminOpen = false; }
    private void CloseAll() { collapseNavMenu = true; adminOpen = false; userOpen = false; }

    protected override void OnInitialized()
    {
        CartService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        CartService.OnChange -= StateHasChanged;
    }
}